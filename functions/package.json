{
    "name": "comment-generator-functions",
    "version": "1.0.0",
    "description": "Cloud Functions for Comment Generator",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "firebase-admin": "^13.6.0",
        "firebase-functions": "^7.0.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.6",
        "typescript": "^5.3.0"
    },
    "private": true
}
